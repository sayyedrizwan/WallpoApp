<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activity.EditProfileActivity">

    <ImageView
        android:id="@+id/backimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="40dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/profilepic" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/card"
                android:layout_margin="2dp"
                android:paddingBottom="80dp"
                android:background="@drawable/roundborderviewposts"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="7dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_verified" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Name"
                    android:textColor="@color/storycardgrey" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:fontFamily="@font/segoeui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/roundedittext"
                    android:hint="Enter Name..."
                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:lines="1"
                    android:maxLength="28"
                    android:maxLines="1"
                    android:minEms="1"
                    android:padding="13dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textColorLink="@android:color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/storycardgrey"
                    android:text="Username" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:fontFamily="@font/segoeui"
                    android:background="@drawable/roundedittext"
                    android:hint="Enter Username..."
                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:lines="1"
                    android:maxLength="28"
                    android:maxLines="1"
                    android:minEms="1"
                    android:padding="13dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textColorLink="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Category"
                    android:textColor="@color/storycardgrey"  />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/roundedittext"
                    android:hint="Enter Category..."
                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:fontFamily="@font/segoeui"
                    android:lines="1"
                    android:maxLength="28"
                    android:maxLines="1"
                    android:minEms="1"
                    android:padding="13dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textColorLink="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Website"
                    android:textColor="@color/storycardgrey"  />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/roundedittext"
                    android:hint="Enter Website..."
                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:lines="1"
                    android:maxLength="28"
                    android:maxLines="1"
                    android:fontFamily="@font/segoeui"
                    android:minEms="1"
                    android:padding="13dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textColorLink="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Bio"
                    android:textColor="@color/storycardgrey" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/roundedittext"
                    android:hint="Enter Bio..."
                    android:inputType="textMultiLine"
                    android:lineHeight="1dp"
                    android:maxLength="140"
                    android:maxLines="10"
                    android:fontFamily="@font/segoeui"
                    android:minEms="8"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:paddingBottom="50dp"
                    android:paddingTop="13dp"
                    android:paddingLeft="13dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textColorLink="@android:color/white"
                    android:paddingStart="13dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="15dp"
                    android:background="@android:color/white" />


                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/lovelo"
                    android:text="Private Information"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textColor="@color/storycardgrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Email Address" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/roundedittext"
                    android:hint="Enter Email Address..."
                    android:inputType="text"
                    android:lineHeight="1dp"
                    android:lines="1"
                    android:maxLength="28"
                    android:fontFamily="@font/segoeui"
                    android:maxLines="1"
                    android:minEms="1"
                    android:padding="13dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textColorLink="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Phone Number (along Country code)"
                    android:textColor="@color/storycardgrey"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@drawable/roundedittext"
                        android:hint="Enter Phone Number..."
                        android:inputType="number"
                        android:lineHeight="1dp"
                        android:lines="1"
                        android:maxLength="28"
                        android:maxLines="1"
                        android:fontFamily="@font/segoeui"
                        android:minEms="1"
                        android:padding="13dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textColorLink="@android:color/white" />


            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_checked"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">


    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>