<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".profile.ProfileActivity">

    <ImageView
        android:id="@+id/backimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:id="@+id/toplay"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toplay"
                android:background="@drawable/roundmainprofile"
                android:orientation="vertical"
                android:padding="9dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilecard"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/profilepic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/verified"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/profilecard"
                        android:layout_toRightOf="@id/profilecard"
                        android:src="@drawable/ic_verified"
                        android:translationY="-4dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/menuimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:src="@drawable/ic_profile_menu" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/message"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_toStartOf="@id/menu"
                        android:layout_toLeftOf="@id/menu"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:src="@drawable/ic_email" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/menu"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:src="@drawable/ic_share" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/name"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/lovelo"
                    android:text=" - "
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/username"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/segoeui"
                    android:text=" - "
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/category"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:drawableStart="@drawable/ic_info"
                    android:drawableLeft="@drawable/ic_info"
                    android:fontFamily="@font/segoeui"
                    android:text=" -"
                    android:textColor="@android:color/white"
                    android:translationX="-2dp" />

                <TextView
                    android:id="@+id/websites"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"
                    android:drawableStart="@drawable/ic_link"
                    android:drawableLeft="@drawable/ic_link"
                    android:fontFamily="@font/segoeui"
                    android:text=" -"
                    android:textColor="@color/com_facebook_blue"
                    android:translationX="-2dp" />

                <TextView
                    android:id="@+id/bio"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/helvetica"
                    android:text=" -"
                    android:textColor="@android:color/white"
                    android:translationX="-2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/subscribedlay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="5"
                        app:cardBackgroundColor="@color/profilesub"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/profilesub"
                            android:padding="10dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/subscribed"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="2dp"
                                android:fontFamily="@font/helvetica"
                                android:text="0"
                                android:textColor="@android:color/white" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/subscribed"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/lovelo"
                                android:singleLine="true"
                                android:text="@string/subscribed"
                                android:textColor="@android:color/white" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="5"
                        app:cardBackgroundColor="@color/profilesub"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/subscriberslay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/profilesub"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/subscribers"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="2dp"
                                android:fontFamily="@font/helvetica"
                                android:text="0"
                                android:textColor="@android:color/white" />

                            <TextView
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/subscribers"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/lovelo"
                                android:text="@string/subscribers"
                                android:textColor="@android:color/white" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/subscribebt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardsignup"
                        android:fontFamily="@font/lovelo"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="@string/subscribe"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/subscribedbt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/signup"
                        android:fontFamily="@font/lovelo"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="@string/subscribed"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/editprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:fontFamily="@font/lovelo"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="@string/editprofilebig"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/trendsposts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/trendingposts"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/noposts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/noposts"
                    android:textColor="@android:color/white" />

                <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/trendingloading"
                    style="@style/SpinKitView.Large.Wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/signup" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trendingposts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/poststxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/postsbig"
                    android:textColor="@android:color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/albumtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/albums"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/noalbums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/noalbums"
                    android:textColor="@android:color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/albums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/firewalltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/firewall"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/nofirewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/lovelo"
                    android:text="@string/nostories"
                    android:textColor="@android:color/white" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/firewall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />


            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>