<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activity.ViewPostsActivity">

    <ImageView
        android:id="@+id/imagview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imagview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter" />

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:controller_layout_id="@layout/custom_playback_control"
        app:show_buffering="always"
        app:use_controller="true" />

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bufferingbar"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/signup" />

    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="28dp"
        android:layout_height="38dp"
        android:layout_margin="8dp"
        android:alpha="0.8"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/ic_left_arrow" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/duration"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/segoeui"
        android:text="0s"
        android:textColor="@android:color/white"
        android:layout_marginEnd="10dp" />


    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackviewposts" />

    <RelativeLayout
        android:id="@+id/viewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rellay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/favlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/roundborderfavwhite">

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/favbutton"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:translationX="5dp"
                    android:translationY="-3dp"
                    app:sparkbutton_activeImage="@drawable/fav_heart"
                    app:sparkbutton_iconSize="37dp"
                    app:sparkbutton_inActiveImage="@drawable/un_fav"
                    app:sparkbutton_primaryColor="@color/signup"
                    app:sparkbutton_secondaryColor="@color/white" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/profilecard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/favlay"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/profilepic" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/dislayname"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favlay"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@id/profilecard"
                android:layout_toRightOf="@id/profilecard"
                android:fontFamily="@font/worlsans"
                android:text=" - "
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dislayname"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/profilecard"
                android:layout_toRightOf="@id/profilecard"
                android:fontFamily="@font/worlsans"
                android:text=" - "
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/caption"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilecard"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center"
                android:text=" -- "
                android:textColor="@android:color/white" />


            <androidx.cardview.widget.CardView
                android:id="@+id/delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/caption"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="9dp"
                app:cardBackgroundColor="@color/storycard"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp"
                    android:src="@drawable/ic_delete" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/delete"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="9dp"
                app:cardBackgroundColor="@color/storycard"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_edit_white" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/likelay"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_above="@id/bottomup"
            android:layout_margin="19dp"
            app:cardBackgroundColor="@color/storycard"
            app:cardCornerRadius="14dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/likebutton"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    app:sparkbutton_activeImage="@drawable/ic_liked"
                    app:sparkbutton_iconSize="22dp"
                    app:sparkbutton_inActiveImage="@drawable/ic_like"
                    app:sparkbutton_primaryColor="@color/colorPrimary"
                    app:sparkbutton_secondaryColor="@color/white" />

                <TextView
                    android:id="@+id/likeno"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toEndOf="@id/likebutton"
                    android:layout_toRightOf="@id/likebutton"
                    android:fontFamily="@font/worlsans"
                    android:text="17k"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomup"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="9dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:rotation="-90"
                android:src="@drawable/ic_fast_forward" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/roundborderviewposts"
        app:behavior_hideable="true"
        app:behavior_peekHeight="20dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/minusshow"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/date"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/minusshow"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/lovelo"
                android:text="@string/date"
                android:textColor="@android:color/white" />


            <androidx.cardview.widget.CardView
                android:id="@+id/wallpaperset"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/date"
                android:layout_margin="9dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="14dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_wallpaper_" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/wallpaperlockset"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"
                android:layout_margin="9dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_wallpaper_lock" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/comment"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/date"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="9dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_comment" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/share"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/wallpaperset"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp"
                    android:src="@drawable/ic_share_white" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/link"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/wallpaperset"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="14dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp"
                    android:src="@drawable/ic_chrome" />


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>