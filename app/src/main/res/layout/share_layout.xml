<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/lovelo"
            android:text="@string/shareposts"
            android:textColor="@android:color/white" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sharetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_margin="8dp"
            android:padding="10dp"
            android:inputType="text"
            android:textColorHint="@android:color/white"
            android:background="@drawable/roundprofilebutton"
            android:fontFamily="@font/segoeui"
            android:hint="@string/searchuser"
            android:textColor="@android:color/white" />

        <HorizontalScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sharetext"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/copylink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <com.github.florent37.shapeofview.shapes.CircleView
                            android:id="@+id/seenlayout"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            app:shape_circle_borderColor="@color/cardsignup"
                            app:shape_circle_borderWidth="2dp">

                            <ImageView
                                android:id="@+id/profileseenimg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="15dp"
                                android:src="@drawable/ic_link_copy" />

                        </com.github.florent37.shapeofview.shapes.CircleView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/seenlayout"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/segoeui"
                            android:text="@string/copylink"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/shareexternal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <com.github.florent37.shapeofview.shapes.CircleView
                            android:id="@+id/shareext"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            app:shape_circle_borderColor="@color/cardsignup"
                            app:shape_circle_borderWidth="2dp">

                            <ImageView
                                android:id="@+id/shareimg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="15dp"
                                android:src="@drawable/ic_airdrop" />

                        </com.github.florent37.shapeofview.shapes.CircleView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/shareext"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/segoeui"
                            android:text="@string/shareexternal"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/messagerecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </androidx.recyclerview.widget.RecyclerView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <com.github.florent37.shapeofview.shapes.CircleView
                            android:id="@+id/findxt"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            app:shape_circle_borderColor="@color/cardsignup"
                            app:shape_circle_borderWidth="2dp">

                            <ImageView
                                android:id="@+id/findimg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="15dp"
                                android:src="@drawable/ic_search_user" />

                        </com.github.florent37.shapeofview.shapes.CircleView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/findxt"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/segoeui"
                            android:text="Find"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/loadingbar"
            style="@style/SpinKitView.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sharetext"
            android:layout_centerHorizontal="true"
            app:SpinKit_Color="@color/signup" />

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollview"
            android:layout_margin="8dp"
            android:background="@drawable/roundprofilebutton"
            android:fontFamily="@font/helvetica"
            android:text="@string/donebig"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>